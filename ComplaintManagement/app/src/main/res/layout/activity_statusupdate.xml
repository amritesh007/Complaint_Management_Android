<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statusupdate">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/cl"
        android:layout_centerHorizontal="true"
        android:id="@+id/img1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Status "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/txt1"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:layout_below="@+id/img1"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="Select Hostel Name !"
        android:textColor="#000000"
        android:layout_below="@id/txt1"
        android:layout_marginTop="40dp"
        android:id="@+id/txt2"/>

    <Spinner
        android:id="@+id/spinn1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:inputType="text" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="Enter Room no. !"
        android:textColor="#000000"
        android:layout_below="@id/spinn1"
        android:layout_marginTop="20dp"
        android:id="@+id/txt3"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt3"
        android:textStyle="normal"
        android:id="@+id/roomnumber"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/roomnumber"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:id="@+id/txt5"
        android:text="Enter Status "/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt5"
        android:textStyle="normal"
        android:id="@+id/newstatus"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Update Status"
        android:id="@+id/bttn"
        android:background="#0066ff"
        android:layout_below="@+id/newstatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>

</RelativeLayout>
